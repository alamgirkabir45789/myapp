@page
@model myportfolio.Pages.Website.Product.ProductModel
<div class="container-xxl py-5 bg-primary hero-header">
    <div class="container my-5 py-5 px-lg-5">
        <div class="row g-5 py-5">
            <div class="col-12 text-center">
                <h1 class="text-white animated slideInDown">Project</h1>
                <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/Index">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="~/Website/About/History">About</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Project</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Projects Start -->
<div class="container-xxl py-5">
    <div class="container py-5 px-lg-5">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <p class="section-title text-secondary justify-content-center"><span></span>Our Projects<span></span></p>
            <h1 class="text-center mb-5">Recently Completed Projects</h1>
        </div>

        <div class="row mt-n2 wow fadeInUp" data-wow-delay="0.3s">
            <div class="col-12 text-center">
                <ul class="list-inline mb-5" id="portfolio-flters">
                    <li class="mx-2 active" data-filter="*">All</li>
                    @foreach (var item in Model.Categories)
                    {
                        <li class="mx-2" data-filter="#@item.Key">@item.Title</li>
                    }

                </ul>
            </div>
        </div>

        <div class="row g-4 portfolio-container">
            @if (Model.Products.Count() > 0)
            {
                @foreach (var item in @Model.Products)
                {
                  
                        <div class="col-lg-4 col-md-6 portfolio-item first wow fadeInUp" id="@item.Category.Key" data-wow-delay="0.3s">
                            <div class="rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <img class=" w-100" height="300" width="300" src="/@item.FilePath" alt="">
                                    <div class="portfolio-overlay">
                                        <a class="btn btn-square btn-outline-light mx-1" href="/@item.FilePath" data-lightbox="portfolio"><i class="fa fa-eye"></i></a>
                                        <a class="btn btn-square btn-outline-light mx-1" href="@item.ProjectUrl" target="_blank"><i class="fa fa-link"></i></a>
                                    </div>
                                </div>
                                <div class="bg-light p-4">
                                    <p class="text-primary fw-medium mb-2">@item.Name</p>
                                    <h5 class="lh-base mb-0">@item.Details</h5>
                                </div>
                            </div>
                        </div>
                
                }
            }
         
        </div>
    </div>
</div>
<!-- Projects End -->
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#project-menu-big-screen").addClass("active");
            $("#product-menu-small-screen").addClass("active");
        });</script>
}