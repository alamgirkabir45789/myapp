@page
@model myportfolio.Pages.Website.Career.JobDescriptionModel
@{
}

<link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

<div class="container-xxl position-relative p-0">
    <div class="container-xxl py-5 bg-primary hero-header">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-12 text-center">
                    <h1 class="text-white animated slideInDown">Job Description</h1>
                    <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Job Description</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section ftco-animate" style="padding:0 10%;">
    <div class="container career-container">
        <div class="job-opening-container">
            @*<h2 class="mb4 job-description-header text-center">@Model.JobCircularViewModel.JobTitle</h2>*@
            <p class="section-title text-secondary justify-content-center"><span></span>@Model.JobCircularViewModel.JobTitle<span></span></p>

            <h4 class="mb4 job-description-header">Job Overview</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.Overview
            </p>

            <h4 class="mb-2 job-description-header">Application Deadline</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.EndDate.ToString("dd MMMM yyyy")
            </p>

            <h4 class="mb-2 job-description-header">No. of Vacancy</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.NoOfVacancy
            </p>

            <h4 class="mb-2 job-description-header">Job Status</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.JobStatus
            </p>

            <h4 class="mb-2 job-description-header">Job Location</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.WorkStation
            </p>

            <h4 class="mb-2 job-description-header">Responsibilities</h4>
            <p class="job-description-text mb-4">
                @Html.Raw(Model.JobCircularViewModel.Responsibilities)
            </p>

            <h4 class="mb-2 job-description-header">Job Qualifications</h4>
            <p class="job-description-text mb-4">
                @Html.Raw(Model.JobCircularViewModel.Qualifications)
            </p>

            <h4 class="mb-2 job-description-header">Job Skill</h4>
            <p class="job-description-text mb-4">
                @Html.Raw(Model.JobCircularViewModel.Skill)
            </p>

            <h4 class="mb-2 job-description-header">Privilege</h4>
            <p class="job-description-text mb-4">
                @Html.Raw(Model.JobCircularViewModel.Privilege)
            </p>

            <h4 class="mb-2 job-description-header">Salary</h4>
            <p class="job-description-text mb-4">
                @Model.JobCircularViewModel.Salary
            </p>
        </div>
    </div>
</section>

<div class="container-xxl py-5">
    <div class="container py-5 px-lg-5">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="section-title text-secondary justify-content-center"> Apply Now</h1>
            @*<h1 class="text-center mb-5"> Apply Now</h1>*@
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <p class="text-center mb-4">

                        <form method="post" class="pt-5 " enctype="multipart/form-data" id="resume-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row g-3">

                                <div class="col-md-6">
                                    <div class="form-floating">

                                         <input asp-for="JobCircularViewModel.ResumeViewModel.JobCircularId" value="@Model.JobCircularViewModel.Id" type="hidden" />
                       
                                        <input asp-for="JobCircularViewModel.ResumeViewModel.FullName" type="text" required class="form-control" id="full-name" placeholder="Enter Full name">
                                        <label for="FullName">Your Name</label>
                                        <span asp-validation-for="JobCircularViewModel.ResumeViewModel.FullName" class="text-danger"></span>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="JobCircularViewModel.ResumeViewModel.Email" type="email" id="email" required class="form-control" placeholder="Enter Email Address" />

                                        <label for="Email">Email</label>
                                        <span asp-validation-for="JobCircularViewModel.ResumeViewModel.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="JobCircularViewModel.ResumeViewModel.Phone" type="text" id="phone" class="form-control" required placeholder="Enter Phone Number" />

                                        <label for="Phone">Phone</label>
                                        <span asp-validation-for="JobCircularViewModel.ResumeViewModel.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">

                                        <input asp-for="JobCircularViewModel.ResumeViewModel.YearsOfExperience" type="number" value="" id="experience" class="form-control" required placeholder="Enter Years of Experience" />

                                        <label for="YearsOfExperience">Enter Years of Experience</label>
                                        <span asp-validation-for="JobCircularViewModel.ResumeViewModel.YearsOfExperience" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                        <input asp-for="JobCircularViewModel.ResumeViewModel.File" type="file" required class="form-control-file" id="exampleFormControlFile1" />                                       
                                        <span asp-validation-for="JobCircularViewModel.ResumeViewModel.File" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row justify-content-center">
                                    @if (!string.IsNullOrEmpty(Model.JobCircularViewModel.ResumeViewModel.Message))
                                    {
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <span class="text-danger" id="message">@Model.JobCircularViewModel.ResumeViewModel.Message</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit" id="btn-submit">
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#career-menu-big-screen").addClass("active");
            $("#career-menu-small-screen").addClass("active");

            var successMessage = $("#message").text();

            if (successMessage === "Your resume submit successful.") {

                Swal.fire("Good job!", "Resume Dropped Successfully!", "success");
                $("#message").text("");

                $('#full-name').val("");
                $('#email').val("");
                $('#phone').val("");
                $('#experience').val("");
            }

        });</script>
}
