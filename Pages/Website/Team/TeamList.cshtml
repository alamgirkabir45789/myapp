@page
@model myportfolio.Pages.Website.Team.TeamListModel
@{
}
<style>
    /* Add hover effect to the card */
    #hoverEffect:hover {
        transform: scale(1.05); /* Increase the card size on hover */
        transition: transform 0.5s ease-in-out; /* Smooth transition */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a box shadow on hover */
        background-color: #F0F0F0 !important;

    }
</style>
<div class="container-xxl py-5 bg-primary hero-header">
    <div class="container my-5 py-5 px-lg-5">
        <div class="row g-5 py-5">
            <div class="col-12 text-center">
                <h1 class="text-white animated slideInDown">Our Team</h1>
                <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/Index">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="~/Website/Product/Product">Project</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Our Team</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container py-5 px-lg-5">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <p class="section-title text-secondary justify-content-center"><span></span>Our Team<span></span></p>
            <h1 class="text-center mb-5">Our Team Members</h1>
        </div>
        <div class="row g-4"  >
            
            @foreach (var item in Model.Teams.Where(x=>x.isActive==true).OrderBy(sc=>sc.SortCode))
            {

                <div class=" col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" >
                    <div class="team-item bg-light rounded" id="hoverEffect">
                        <div class="text-center border-bottom p-4">
                            <img class=" rounded-circle mb-4" src="/@item.LogoPath" alt="" height="150" width="150">
                            <h5>@item.Name</h5>
                            <span>@item.Designation</span>
                        </div>
                        <div class="d-flex justify-content-center p-4">
                            <span style="font-weight:bold">@item.Expertise</span>
                            <br>
                        
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- Team End -->

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#team-menu-small-screen").addClass("active");
            $("#team-menu-big-screen").addClass("active");
            
        });</script>

}