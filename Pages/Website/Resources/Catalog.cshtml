@page
@model myportfolio.Pages.Website.Resources.CatalogModel
@{ int sl = 1; }

<section class="home-slider js-halfheight owl-carousel">

    @if (Model.Slider != null)
    {
        <div class="slider-item js-halfheight"
             style=" background-image: url(/@Model.Slider.FilePath); ">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center">
                    <div class="col-md-7 col-sm-12 text-center ftco-animate js-halfheight-text">
                        <h1 class="mb-3 mt-5 bread">Resources</h1>
                        <p class="breadcrumbs">
                            <span class="mr-2"><a href="/Index">Home</a></span><span>/ Resources / Product Catalog</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="slider-item js-halfheight"
             style=" background-image: url(https://www.ecotextile.com/images/stories/2021/January/Garment_factory.jpg); ">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center">
                    <div class="col-md-7 col-sm-12 text-center ftco-animate js-halfheight-text">
                        <h1 class="mb-3 mt-5 bread">Resources</h1>
                        <p class="breadcrumbs">
                            <span class="mr-2"><a href="/Index">Home</a></span><span>/ Resources / Product Catalog</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

</section>

<section class="ftco-section ftco-animate">
    <div class="container justify-content-center">
        <div class="row text-center justify-content-center">
            <h3 class="font-weight-bold mb-4 text-uppercase">PRODUCT CATALOGS</h3>
        </div>
        <div class="bs-example">
            <div class="accordion" id="accordionExample">
                @foreach (var heading in Model.FileGroups)
                {
                    <div class="card">
                        <div class="card-header" id="heading-@sl">
                            <h2 class="mb-0">
                                <button type="button" class="btn btn-link text-dark remove-text-decoration" data-toggle="collapse" data-target="#collapse-@sl">
                                    <i class="icon icon-arrow-right mr-1"></i>
                                    @heading.GroupName
                                </button>
                            </h2>
                        </div>

                        <div id="collapse-@sl" class="collapse" aria-labelledby="heading-@sl" data-parent="#accordionExample">
                            <div class="card-body">
                                @foreach (var item in Model.ProductCatalogs.Where(x => x.FileGroupId == heading.Id))
                                {
                                    <p class="ml-5">
                                        <i class="icon-arrow-circle-right"></i>
                                        @item.FileName
                                        <a class="red-color" href="/@item.FilePath" download target="_blank">Download</a>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                    sl++;
                }
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#resource-menu-big-screen").addClass("active");
            $("#resource-menu-small-screen").addClass("active");
        });
    </script>
}


