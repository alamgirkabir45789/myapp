@page
@model myportfolio.Pages.Website.Contact.ContactUsModel
@{
}

<link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
<div class="container-xxl position-relative p-0">
    <div class="container-xxl py-5 bg-primary hero-header">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-12 text-center">
                    <h1 class="text-white animated slideInDown">Contact</h1>
                    <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/Index">Home</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="~/Website/About/History">About</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container py-5 px-lg-5">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <p class="section-title text-secondary justify-content-center"><span></span>Contact Us<span></span></p>
            <h1 class="text-center mb-5">Contact For Any Query</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <p class="text-center mb-4">We would love to hear from you. For any queries, business collaborations, or for sending feedback, please fill out the form below and click the “Send Message” button.</p>
                    <form method="post" class="border-right pr-5 mb-5" id="contactForm" name="contactForm" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                
                                    <input asp-for="Query.Key" value="@Guid.NewGuid()" style="display: none" />
                                    <input asp-for="Query.FullName" type="text" required class="form-control" id="full-name" placeholder="Full name">
                                    <label for="name">Your Name</label>
                                    <span asp-validation-for="Query.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">

                                    <input asp-for="Query.Email" type="email" required class="form-control" id="email" placeholder="Email">
                                    <label for="email">Your Email</label>
                                    <span asp-validation-for="Query.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Query.PhoneNo" type="text" required class="form-control" id="phone" placeholder="Mobile Number">
                                    <label for="PhoneNo">Mobile Number</label>
                                    <span asp-validation-for="Query.PhoneNo" class="text-danger"></span>
                                </div>
                            </div> 
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Query.Subject" type="text" required class="form-control" id="subject" placeholder="Subject">
                                    <label for="subject">Subject</label>
                                    <span asp-validation-for="Query.Subject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px" asp-for="Query.Message"></textarea>
                                    <label for="message">Message</label>
                                    <span asp-validation-for="Query.Message" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#contact-menu-big-screen").addClass("active");
            $("#contact-menu-small-screen").addClass("active");

            var message = '@ViewData["Message"]';

            if (message === 'Success') {
                Swal.fire("Thank you for your Query!", "We will get back to you!", "success");


                $("#full-name").val("");
                $('#subject').val("");
                $('#email').val("");
                $('#phone').val("");
                $('#message').val("");
                message = '';

            }

            console.log(message);

        });
    </script>
}