@page
@model myportfolio.Pages.Website.Contact.QueryFormModel
@{
}


<section class="home-slider js-fullheight owl-carousel">
    <div class="slider-item js-fullheight"
         style="
          background-image: url(https://www.ecotextile.com/images/stories/2021/January/Garment_factory.jpg);
        ">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">
                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Query Form</h1>
                    <p class="breadcrumbs">
                        <span class="mr-2"><a href="/Index">Home</a></span><span>/ Contact Us / Query Form</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-animate">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 mb-2">
                <h2 class="mb-1 text-uppercase font-weight-bold">Query Form</h2>
                <hr />
            </div>
        </div>

        <form action="#">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Full Name <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               placeholder="Enter Full Name"
                               required />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email address <span class="text-danger">*</span></label>
                        <input type="email"
                               required
                               class="form-control"
                               placeholder="Enter email" />
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Contact Number <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               required
                               placeholder="Enter Contact Number"
                               required="true" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Subject <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               required
                               placeholder="Enter Subject" />
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Message <span class="text-danger">*</span></label>

                        <textarea class="form-control"
                                  placeholder="Enter Message"
                                  rows="3"></textarea>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 mt-4">
                    <button class="btn btn-info w-100"
                            style="border-radius: 0; padding: 10px 0">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>




@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#contact-menu-big-screen").addClass("active");
            $("#contact-menu-small-screen").addClass("active");
        });</script>
}