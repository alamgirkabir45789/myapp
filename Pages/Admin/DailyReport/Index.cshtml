@page
@model myportfolio.Pages.Admin.DailyReport.IndexModel

@{
    ViewData["Title"] = "Assign Project";
}

<div class="content-wrapper">


    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-user"></i>Assign Project
                            </h3>
                            <a class="float-right btn btn-outline-success" asp-page="Create">
                                Add
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="data-table"
                                   class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th> Name</th>
                                        <th>Project</th>
                                        <th>Assign Date</th>
                                        <th>Target Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>                                      

                                        <th style="width: 15%; text-align: center">
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DailyReportRequests)
                                    {
                                        <tr>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.ProjectName
                                            </td>
                                            <td>@item.AssignDate.ToString("dd MMMM yyyy")</td>
                                            <td>@item.TargetDate.ToString("dd MMMM yyyy")</td>
                           
                                            <td>@(item.EndDate.ToString("dd MMMM yyyy") == "01 January 0001" ? "" : item.EndDate.ToString("dd MMMM yyyy"))</td>                                            
                                            <td>@(item.IsCompleted ? "Complete" : "Not Completed ")</td>

                                            <td class="text-center">
                                                <a class="btn btn-primary text-white px-1 py-0" asp-page="./Details" asp-route-id="@item.Id" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a class="btn btn-warning text-white px-1 py-0" asp-page="./Edit" asp-route-id="@item.Id" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger text-white px-1 py-0" asp-page="./Delete" asp-route-id="@item.Id" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-report").addClass("menu-open");
            $("#menu-daily-report").addClass("active-custom");
        });</script>
}
