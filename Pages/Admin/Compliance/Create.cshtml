@page
@model myportfolio.Pages.Admin.Compliance.CreateModel

@{
    ViewData["Title"] = "Compliance | Create";
}


<link href="~/css/imageUpload.css" rel="stylesheet" />

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Slider</h3>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RequestCompliance.Key" value="@Guid.NewGuid()" />

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestCompliance.Title">Title<span class="text-danger">*</span></label>
                                                    <input asp-for="RequestCompliance.Title" type="text" required class="form-control" placeholder="Enter Title" />
                                                    <span asp-validation-for="RequestCompliance.Title" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestCompliance.Details">
                                                        Details
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <textarea asp-for="RequestCompliance.Details" type="text" required class="form-control" placeholder="Enter Details"></textarea>
                                                    <span asp-validation-for="RequestCompliance.Details" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputFile">File input  <span class="text-danger">*</span></label>
                                                    <div class="input-group">
                                                        <div class="custom-file">
                                                            <input type="file" class="custom-file-input" id="exampleInputFile" asp-for="RequestCompliance.File" required>
                                                            <label class="custom-file-label">Choose file</label>

                                                        </div>

                                                    </div>
                                                    <span asp-validation-for="RequestCompliance.File" class="text-danger"></span>

                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">

                                                    <div class="container">
                                                        <div class="wrapper-two">
                                                            <div class="image">
                                                            </div>
                                                            <div class="content">
                                                                <div class="icon">
                                                                    <i class="fas fa-cloud-upload-alt"></i>
                                                                </div>
                                                                <div class="text">
                                                                    No file chosen, yet!
                                                                </div>
                                                            </div>
                                                            <div id="cancel-btn">
                                                                <i class="fas fa-times"></i>
                                                            </div>
                                                            <div class="file-name">
                                                                File name here
                                                            </div>
                                                        </div>
                                                        <button type="button" onclick="defaultBtnActive()" id="custom-choose-file-btn">Choose a file</button>
                                                        <input id="default-btn" type="file" required asp-for="RequestCompliance.Image" style="opacity: 0;">
                                                    </div>
                                                    <br />
                                                    <span asp-validation-for="RequestCompliance.Image" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <a class="btn btn-outline-info" asp-page="./Index">Back</a>
                                <button type="submit" class="btn btn-info float-right">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <!-- /.content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/imageUpload.js"></script>
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-compliance").addClass("active-custom");
            $("#menu-about-us").addClass("menu-open");
        });

        $(function () {
            bsCustomFileInput.init();
        });

    </script>
}