@page
@model myportfolio.Pages.Admin.History.EditModel

@{
    ViewData["Title"] = "History | Edit";
}

<link href="~/css/imageUpload.css" rel="stylesheet" />


<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">History</h3>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RequestMission.Id" />
                            <input type="hidden" asp-for="RequestMission.Key" />
                            <input type="hidden" asp-for="RequestMission.CreatedAt" />
                            <input type="hidden" asp-for="RequestMission.CreatedBy" />
                            <input type="hidden" asp-for="RequestMission.FilePath" id="filePath" />
                            <input type="hidden" asp-for="RequestMission.FileType" />



                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestMission.Title">
                                                        Title
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <input asp-for="RequestMission.Title" type="text" class="form-control" placeholder="Enter Title" />
                                                    <span asp-validation-for="RequestMission.Title" class="text-danger"></span>
                                                </div>
                                            
                                                <div class="form-group">
                                                    <label asp-for="RequestMission.Description">
                                                        Description
                                                        <span class="text-danger">*</span>
                                                    </label>

                                                    <textarea class="form-control form-control-sm"
                                                              placeholder="Write Description"
                                                              id="job-responsibilities"
                                                              rows="2" asp-for="RequestMission.Description"></textarea>
                                                    <span asp-validation-for="RequestMission.Description" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">

                                            <label asp-for="RequestMission.File">
                                                Image File
                                                <span class="text-danger">*</span>
                                            </label>

                                            <div class="container">
                                                <div class="wrapper-two">
                                                    <div class="image">
                                                    </div>
                                                    <div class="content">
                                                        <div class="icon">
                                                            <i class="fas fa-cloud-upload-alt"></i>
                                                        </div>
                                                        <div class="text">
                                                            No file chosen, yet!
                                                        </div>
                                                    </div>
                                                    <div id="cancel-btn">
                                                        <i class="fas fa-times"></i>
                                                    </div>
                                                    <div class="file-name">
                                                        File name here
                                                    </div>
                                                </div>
                                                <button type="button" onclick="defaultBtnActive()" id="custom-choose-file-btn">Choose a file</button>
                                                <input id="default-btn" type="file" asp-for="RequestMission.File" style="opacity: 0;">
                                            </div>
                                            <br />
                                            <span asp-validation-for="RequestMission.File" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>                              

                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-info" asp-page="/Admin/History/Index">Back</a>
                                <button type="submit" class="btn btn-info float-right">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- /.content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/imageUpload.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-about-history").addClass("active-custom");
            $("#menu-about-us").addClass("menu-open");


        });</script>
}