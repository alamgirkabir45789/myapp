@page
@model myportfolio.Pages.Admin.Mission.DeleteModel
@{
    ViewData["Title"] = "Delete Mission";
}


<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <section class="content">

                <div class="card">
                    <div class="card-header bg-danger">
                        <h3 class="card-title ">Are you sure! you want to delete this Mission?</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12  d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header text-muted border-bottom-0">

                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@Html.DisplayFor(model => model.Mission.Title) </b></h2>
                                                <h2 class="lead"><b> @Html.Raw(Model.Mission.Description) </b></h2>


                                            </div>
                                            <div class="col-5 text-center">
                                                <img src="~/@Model.Mission.FilePath" alt="media gallery image" class="img-rounded img-fluid">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="card-footer">
                                        <form method="post">
                                            <input type="hidden" asp-for="Mission.Id" />
                                            <a asp-page="./Index" class="btn  btn-outline-info">Back</a>
                                            <button type="submit" class="btn btn-danger float-right">Delete</button>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


@section Scripts {



    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-about-mission").addClass("active-custom");
            $("#menu-about-us").addClass("menu-open");
        });</script>
}

