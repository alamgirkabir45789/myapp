@page
@model myportfolio.Pages.Admin.Company.CreateModel

@{
    ViewData["Title"] = "Concern | Create";
}

<link href="~/css/imageUpload.css" rel="stylesheet" />

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Concern</h3>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RequestCompany.Key" value="@Guid.NewGuid()" />

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestCompany.Name">Company Name<span class="text-danger">*</span></label>
                                                    <input asp-for="RequestCompany.Name" type="text" required class="form-control" placeholder="Enter Company Name" />
                                                    <span asp-validation-for="RequestCompany.Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">


                                                <div class="form-group">
                                                    <label asp-for="RequestCompany.Established">
                                                        Established Date
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <input type="text" asp-for="RequestCompany.Established" class="form-control  date" placeholder="Enter Established Date" />
                                                    <span asp-validation-for="RequestCompany.Established" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestCompany.Description">
                                                        Description
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    
                                                    <textarea asp-for="RequestCompany.Description" required class="form-control form-control-sm" id="company-details" 
                                                              rows="2" placeholder="Enter Company Description"></textarea>
                                                    <span asp-validation-for="RequestCompany.Description" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">

                                                    <div class="container">
                                                        <div class="wrapper-two">
                                                            <div class="image">
                                                            </div>
                                                            <div class="content">
                                                                <div class="icon">
                                                                    <i class="fas fa-cloud-upload-alt"></i>
                                                                </div>
                                                                <div class="text">
                                                                    No file chosen, yet!
                                                                </div>
                                                            </div>
                                                            <div id="cancel-btn">
                                                                <i class="fas fa-times"></i>
                                                            </div>
                                                            <div class="file-name">
                                                                File name here
                                                            </div>
                                                        </div>
                                                        <button type="button" onclick="defaultBtnActive()" id="custom-choose-file-btn">Choose a file</button>
                                                        <input id="default-btn" type="file" required asp-for="RequestCompany.File" style="opacity: 0;">
                                                    </div>
                                                    <br />
                                                    <span asp-validation-for="RequestCompany.File" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="RequestCompany.History">
                                                        History
                                                    </label>
                                                    <textarea asp-for="RequestCompany.History" type="text" rows="3" class="form-control" placeholder="Enter History"></textarea>
                                                    <span asp-validation-for="RequestCompany.History" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <a class="btn btn-outline-info" asp-page="./Index">Back</a>
                                <button type="submit" class="btn btn-info float-right">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <!-- /.content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/imageUpload.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-company").addClass("active-custom");
            $(".summernote").summernote();
        });</script>
}