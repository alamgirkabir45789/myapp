@page
@model myportfolio.Pages.Admin.ReportedProject.EditModel

@{
    ViewData["Title"] = "Edit Project";
}

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Reported Project</h3>
                        </div>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ReportedProjectRequested.Id" />
                            <input type="hidden" asp-for="ReportedProjectRequested.Key" />
                            <input type="hidden" asp-for="ReportedProjectRequested.CreatedAt" />
                            <input type="hidden" asp-for="ReportedProjectRequested.CreatedBy" />
                            <div class="card-body">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label asp-for="ReportedProjectRequested.ProjectName">
                                                    Project Name
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <input asp-for="ReportedProjectRequested.ProjectName" required type="text" class="form-control" placeholder="Enter  Description" />
                                                <span asp-validation-for="ReportedProjectRequested.ProjectName" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label asp-for="ReportedProjectRequested.Description">
                                                    Description
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <textarea asp-for="ReportedProjectRequested.Description"  type="text" class="form-control" placeholder="Enter  Description"></textarea>
                                                <span asp-validation-for="ReportedProjectRequested.Description" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="ReportedProjectRequested.IsCompleted" />Is Completed
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-info" asp-page="/Admin/ReportedProject/Index">Back</a>
                                <button type="submit" class="btn btn-info float-right">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <!-- /.content -->
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-configuration").addClass("menu-open");
            $("#menu-reported-Project").addClass("active-custom");
        });</script>
}
