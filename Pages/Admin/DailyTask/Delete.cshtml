@page
@model myportfolio.Pages.Admin.DailyTask.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
    var inTime = Model.DailyTaskReques.InTime;
    var outTime = Model.DailyTaskReques.OutTime;
}


<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <section class="content">

                <div class="card">
                    <div class="card-header bg-danger">
                        <h3 class="card-title ">Are you sure! you want to delete this Task?</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-sm-8 col-md-6 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header text-muted border-bottom-0">
                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <input id="inTime" type="hidden" value="@inTime" />
                                            <input id="outTime" type="hidden" value="@outTime" />
                                            <div class="col-md-6 col-sm-10">
                                                <p><strong>Name: </strong><span>@Model.DailyTaskReques.Name</span></p>
                                                <p><strong>In Time: </strong><span id="test"></span> </p>
                                                <p><strong>Working Project: </strong><span>@Html.DisplayFor(model => model.DailyTaskReques.WorkingProject)</span> </p>
                                            </div>
                                            <div class="col-md-6 col-sm-10">
                                                <p><strong>Reporting Date: </strong> <span>@Model.DailyTaskReques.SubmitDate.ToString("dd MMMM yyyy")</span> </p>
                                                <p><strong>Out Time: </strong><span id="test2"></span> </p>
                                                <p><strong>Description: </strong> <span>@Html.DisplayFor(model => model.DailyTaskReques.Description)</span> </p>
                                            </div>                                          
                                        </div>
                                    </div>


                                    <div class="card-footer">
                                        <form method="post">
                                            <input type="hidden" asp-for="DailyTaskReques.Id" />
                                            <a asp-page="./Index" class="btn  btn-outline-info">Back</a>
                                            <button type="submit" class="btn btn-danger float-right">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


@section Scripts {



    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-daily-task").addClass("active-custom");
            //$("#menu-report").addClass("menu-open");

            var time = $("#inTime").val();
            $("#test").text(function (i, oldText) {
                return "" + new Date('7/10/2013 ' + time).toLocaleTimeString().replace(/([\d]+:[\d]{2})(:[\d]{2})(.*)/, "$1$3")
            })

            var time2 = $("#outTime").val();
            $("#test2").text(function (i, oldText) {
                return "" + new Date('7/10/2013 ' + time2).toLocaleTimeString().replace(/([\d]+:[\d]{2})(:[\d]{2})(.*)/, "$1$3")
            })

        });</script>
}


