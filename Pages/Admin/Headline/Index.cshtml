@page
@model myportfolio.Pages.Admin.Headline.IndexModel

@{
    ViewData["Title"] = "Slider Headline";
}


<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-newspaper"></i> Slider Headline
                            </h3>
                            <a class="float-right btn btn-outline-success" asp-page="Create">
                                Add
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="data-table"
                                   class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>News Headline</th>
                                        <th>Status</th>


                                        <th style="width: 15%; text-align: center">
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.HeadLine)
                                    {
                                        <tr>
                                            <td>@item.News</td>
                                            <td>
                                                @if (item.IsActive == false)
                                                {
                                                    <span class="badge badge-danger">InActive</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                            </td>


                                            <td class="text-center">

                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                    <a class="btn btn-warning text-white px-1 py-0 mx-2" asp-page="./Edit" asp-route-id="@item.Id" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <form method="post" asp-page="./Delete" asp-route-id="@item.Id">
                                                        <button onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger text-white px-1 py-0" id="@item.Id" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>

                                                </div>



                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-headline").addClass("active-custom");
            $("#menu-configuration").addClass("menu-open");
        });</script>
}

