@page
@model myportfolio.Pages.Admin.User.EditModel
@{
    ViewData["Title"] = "Edit User";
    var userId = ViewData["userId"];
}

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Edit User</h3>
                        </div>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                            <div class="card-body">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="" asp-for="Model.Name">Name</label>
                                                <input type="text" asp-for="Model.Name" class="form-control" placeholder="Enter Name" />
                                                <span asp-validation-for="Model.Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                       
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="" asp-for="Model.Email">Email Address</label>
                                                <input type="email" asp-for="Model.Email" class="form-control" placeholder="example@sample.com" />
                                                <span asp-validation-for="Model.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="" asp-for="Model.ContactNo">Phone</label>
                                                <input type="text" asp-for="Model.ContactNo" class="form-control" placeholder="Enter Contact No" />
                                                <span asp-validation-for="Model.ContactNo" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="" asp-for="Model.EmployeeCode">Employee Code</label>
                                                <input type="text" asp-for="Model.EmployeeCode" required class="form-control" placeholder="Enter Employee Code" />
                                                <span asp-validation-for="Model.EmployeeCode" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-info" asp-page="./Index">Back</a>
                                <button type="submit" class="btn btn-info float-right" asp-route-id="@userId">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <!-- /.content -->
</div>

@section Scripts {


    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-configuration").addClass("menu-open");
            $("#menu-user").addClass("active-custom");

        });</script>
}