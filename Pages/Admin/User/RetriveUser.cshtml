@page
@model myportfolio.Pages.Admin.User.RetriveUserModel
@{
    ViewData["Title"] = "Retrive User";
}

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <section class="content">

                <div class="card">
                    <div class="card-header bg-danger">
                        <h3 class="card-title ">Are you sure! you want to retrive this User?</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header text-muted border-bottom-0">
                                    </div>
                                    <div class="card-body pt-0">

                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><strong>Name: </strong><b>@Html.DisplayFor(model => model.ApplicationUsers.Name) </b></h2>
                                                <p><strong>Email: </strong><b>@Html.DisplayFor(model => model.ApplicationUsers.Email) </b></p>
                                                <p><strong>Contact No: </strong> @Html.DisplayFor(model => model.ApplicationUsers.ContactNo) </p>
                                                <p><strong>Employee Code: </strong> @Html.DisplayFor(model => model.ApplicationUsers.EmployeeCode) </p>                                               
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <form method="post">
                                            <input type="hidden" asp-for="ApplicationUsers.Id" />
                                            <a asp-page="./Index" class="btn  btn-outline-info">Back</a>
                                            <button type="submit" class="btn btn-danger float-right">Save</button>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


@section Scripts {



    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-configuration").addClass("menu-open");
            $("#menu-user").addClass("active-custom");
        });</script>
}