@page
@model myportfolio.Pages.Admin.MediaGallery.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <section class="content">

                <div class="card">
                    <div class="card-header bg-danger">
                        <h3 class="card-title ">Are you sure! you want to delete this Image?</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header text-muted border-bottom-0">

                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><strong>Event:</strong><b>@Html.DisplayFor(model => model.MediaGallery.FileName) </b></h2>
                                                <h2 class="lead"><strong>Date:</strong><b>@Html.DisplayFor(model => model.MediaGallery.EventDate) </b></h2>


                                            </div>
                                            @if (Model.MediaGallery.VideoLink != null)
                                            {
                                                <div class="col-5 text-center">
                                                    <iframe class="responsive-iframe" src="@Html.DisplayFor(model => model.MediaGallery.VideoLink)" title="YouTube video player" frameborder="0"
                                                            style="height: 200px; width: 90%;" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                                </div>

                                            }
                                            else
                                            {
                                                <div class="col-5 text-center">
                                                    <img src="~/@Model.MediaGallery.FilePath" alt="media gallery image" class="img-rounded img-fluid">
                                                </div>

                                            }
                                        </div>
                                    </div>


                                    <div class="card-footer">
                                        <form method="post">
                                            <input type="hidden" asp-for="MediaGallery.Id" />
                                            <a asp-page="./Index" class="btn  btn-outline-info">Back</a>
                                            <button type="submit" class="btn btn-danger float-right">Delete</button>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


@section Scripts {



    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-media-gallery").addClass("active-custom");
            $("#menu-resources").addClass("menu-open");
        });</script>
}
