@page
@model myportfolio.Pages.Admin.Style.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="content-wrapper">
    <section class="content pt-3">
        <div class="container-fluid">
            <section class="content">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Style Detail</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-md-12 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header">
                                        <h3 class="card-title" style="text-align: center;width: 100%; font-size: 1.8rem; font-weight: bold;">@Model.Style.StyleNo</h3>
                                    </div>

                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <br />
                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Category :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.StyleCategory.Title)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Fabrication :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.Fabrication)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">FOB :</span><br />
                                                    <span>$ @Html.DisplayFor(model => model.Style.Price)/@Html.DisplayFor(model => model.Style.PriceFor)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Export Market :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.ExportTo)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Size :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.Size)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Color :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.Color)</span>
                                                </h2>

                                                <h2 class="lead" style="font-size: 1.2rem;">
                                                    <span style="font-weight: bold;">Item :</span><br />
                                                    <span>@Html.DisplayFor(model => model.Style.Item)</span>
                                                </h2>

                                            </div>
                                            <div class="col-5 text-center">
                                                <br />
                                                <img src="~/@Model.Style.FilePath" alt="media gallery image" class="img-rounded img-fluid">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <form method="post">
                                            <input type="hidden" asp-for="Style.Id" />
                                            <a asp-page="./Index" class="btn  btn-outline-info">Back</a>
                                            <button type="submit" class="btn btn-danger float-right">Delete</button>
                                        </form>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-style").addClass("active-custom");
            $("#menu-styles").addClass("menu-open");
        });
    </script>
}
